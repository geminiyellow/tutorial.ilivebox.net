= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :display_order
    = f.number_field :display_order
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :isbn
    = f.text_field :isbn
  .field
    = f.label :cover_url
    = f.text_field :cover_url
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :icon_path
    = f.text_field :icon_path
  .field
    = f.label :category
    = f.text_field :category
  .actions
    = f.submit 'Save'
